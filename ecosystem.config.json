{
  "apps": [
    {
      "name": "kpanel",
      "script": "./kpanel-server-enterprise.js",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production",
        "PORT": "2222"
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": "2222"
      },
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "error_file": "./logs/kpanel-error.log",
      "out_file": "./logs/kpanel-out.log",
      "log_file": "./logs/kpanel-combined.log",
      "merge_logs": true,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "restart_delay": 4000,
      "kill_timeout": 5000,
      "listen_timeout": 8000,
      "shutdown_with_message": true,
      "source_map_support": false,
      "disable_trace": false,
      "instance_var": "INSTANCE_ID"
    }
  ],
  "deploy": {
    "production": {
      "user": "kpanel",
      "host": ["localhost"],
      "ref": "origin/main",
      "repo": "https://github.com/herfaaljihad/kpanel.git",
      "path": "/usr/local/kpanel",
      "post-deploy": "npm install --production && cd client && npm install && npm run build && pm2 reload ecosystem.config.js --env production",
      "pre-setup": "mkdir -p /usr/local/kpanel/logs && mkdir -p /usr/local/kpanel/database"
    }
  }
}
